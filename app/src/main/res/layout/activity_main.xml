        app:layout_constraintTop_toTopOf="parent" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnarea"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:hint="area of circle"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/btnpalindrome"
            android:hint="palindrome number"
            android:layout_width="129dp"
            android:layout_height="60dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnSI"
            android:hint="SI"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:textSize="18sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnarmstrong"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:hint="Armstrong"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/btnautomorphic"
            android:hint="Automorphic"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnswap"
            android:hint="Swapping Number"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:textSize="18sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        />

</LinearLayout>